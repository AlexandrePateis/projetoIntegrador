<div class="container">
    <%= form_with(model: client, local: true, class: "mt-4") do |form| %>
      <% if client.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <h4 class="alert-heading"><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h4>
          <ul>
            <% client.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name , "Nome", class:"fw-bold" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :email, "Email", class:"fw-bold"  %>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :phone, "Telefone", class:"fw-bold"  %>
        <%= form.text_field :phone, class: "form-control" %>
      </div>

      <h3 class="mt-3 text-center">Endere√ßo</h3>
      <%= form.fields_for :address do |address_form| %>
        <div class="form-group">
          <%= address_form.label :street, "Rua", class:"fw-bold" %>
          <%= address_form.text_field :street, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= address_form.label :neighborhood, "Bairro", class:"fw-bold" %>
          <%= address_form.text_field :neighborhood, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= address_form.label :city, "Cidade", class:"fw-bold"  %>
          <%= address_form.text_field :city, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= address_form.label :state, "Estado", class:"fw-bold"  %>
          <%= address_form.text_field :state, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= address_form.label :postal_code, "CEP", class:"fw-bold"  %>
          <%= address_form.text_field :postal_code, class: "form-control" %>
        </div>
      <% end %>

      <div class="d-flex gap-3 mt-3 mb-3">
        <%= form.submit "Salvar", class: "btn btn-secondary btn-sm" %>
        <%= link_to "Cancelar", clients_path, class: "btn btn-secondary btn-sm" %>
      </div>
    <% end %>
  </div>